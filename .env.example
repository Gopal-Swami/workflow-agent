# =============================================================================
# Workflow Agent - Environment Variables
# =============================================================================
# Copy this file to .env and adjust values as needed:
#   cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# Temporal Configuration
# -----------------------------------------------------------------------------
TEMPORAL_ADDRESS=localhost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=agent-tasks

# -----------------------------------------------------------------------------
# PostgreSQL (Temporal Database)
# -----------------------------------------------------------------------------
POSTGRES_USER=temporal
POSTGRES_PASSWORD=temporal
POSTGRES_DB=temporal

# -----------------------------------------------------------------------------
# Worker Configuration
# -----------------------------------------------------------------------------
WORKER_MAX_CONCURRENT_ACTIVITIES=10
WORKER_MAX_CONCURRENT_WORKFLOWS=10

# -----------------------------------------------------------------------------
# Web Application
# -----------------------------------------------------------------------------
WEB_PORT=3000
NODE_ENV=production

# -----------------------------------------------------------------------------
# Temporal UI
# -----------------------------------------------------------------------------
TEMPORAL_UI_PORT=8080
TEMPORAL_CORS_ORIGINS=http://localhost:3000

# -----------------------------------------------------------------------------
# Docker Network (internal)
# -----------------------------------------------------------------------------
# These are used for inter-container communication within Docker
# When running in Docker, services connect via container names
TEMPORAL_ADDRESS_DOCKER=temporal:7233
